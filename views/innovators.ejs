<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="css/innovatorsStyles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat&family=Playfair+Display:ital@0;1&family=Poppins&family=Tiro+Devanagari+Hindi&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Tapam</title>
</head>

<body>
    <!--navbar section-->
    <section class="navbar-main" id="home">
        <nav class="navbar navbar-expand-lg navbar-dark navbar-color">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><img class="brand-img"
                        src="https://fontmeme.com/permalink/230328/0d60030753cf2cf675885daae3e77be8.png" alt="hindi"
                        border="0"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-right">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="main.html">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="login.html">Have an Idea?</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#footer">Contact Us</a>
                            </li>
                            <li class="nav-item">

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </section>
    <!--ideas section-->
    <section class="white-section" id="idea-section">

        <h2 class="section-heading">From Ideas To Reality</h2>

        <div class="row">

            <% projects.forEach(function(project){ %>
                <div class="idea-column col-lg-4 col-md-6">
                  <div class="card">
                    <div class="card-header">
                      <h3 name="ideaHeading">
                        <%= project.ideaTitle %>
                      </h3>
                    </div>
                    <form action="/fundingpage" method="post">
                      <input type="hidden" name="projectId" value="<%= project._id %>">
                      <div class="card-body">
                        <h2 class="idea-text" name="domain">
                          <%= project.domain.substring(0, 10) + "..." %>
                        </h2>
                        <p name="problemStatement">
                          <%= project.problemStatement.substring(0, 120) + " ..." %>
                        </p>
                        <p name="cost">Cost: <%= project.cost %>
                        </p>
                        <button class="btn btn-lg btn-block btn-outline-dark viewButton" type="submit" name="item">View</button>
                      </div>
                    </form>
                  </div>
                </div>
                <% }); %>
        </div>
    </section>

   
<!--creators section-->
    <section class="creators" id="creators">
        <hr>
        <div class="creators-heading">Our Innovators</div>
        <div class="row">

            <% users.forEach(function(user){%>
                <div class="idea-column col-lg-2 col-md-8">
                    <div class="card creators-card">
                        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30"  fill="currentColor"
                            class="bi bi-person bi-creators-card" viewBox="0 0 16 16">
                            <path
                                d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                        </svg>
                        <div class="card-body">
                            <p class="card-text" name="userName">
                                <%= user.firstName +" "+ user.lastName %></p>
                        <p class=" card-text">
                                    <%= user.description.substring(0, 13) + "..." %>
                            </p>
                            <p class="card-text">
                                <%= user.email.substring(0, 11) + "..." %>
                            </p>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
        <!--#################-->

    </section>
    <!--footer-->
    <footer class="contact footer-creator" id="footer">

        <div class="footer-head">
            <i class="fa fa-twitter footer-icons" aria-hidden="true"></i>
            <i class="fa fa-facebook-official footer-icons" aria-hidden="true"></i>
            <i class="fa fa-instagram footer-icons" aria-hidden="true"></i>
            <i class="fa fa-envelope footer-icons" aria-hidden="true"></i>
        </div>
        <p class="footer-text">Â© Copyright Tapam</p>

    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"></script>
</body>

</html>